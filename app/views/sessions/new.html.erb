<%= form_tag sessions_path do |form| %>
    <div class="form-group row">
        <%= label_tag :email, nil, class: 'col-sm-1 col-form-label' %>
        <div class="col-sm-3">
            <%= text_field_tag :email, "", class: 'form-control' %>
        </div>
    </div>

    <div class="form-group row">
        <%= label_tag :password, nil, class: 'col-sm-1 col-form-label' %>
        <div class="col-sm-3">
            <%= password_field_tag :password, "", class: 'form-control' %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-secondary my-2">
        </div>
    </div>
    

<% end %>

