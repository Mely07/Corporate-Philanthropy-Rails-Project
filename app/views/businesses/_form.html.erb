<% if @business.errors.any? %>
    <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
        <% @business.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @business do |f| %>
    <div class="form-group row">
        <%= f.label "Name:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.text_field :name, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label "Sector:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.select :sector, ['Finance', 'Technology', 'Food', 'Retail', 'Other'], {}, {class: "form-control"} %>
        </div>
    </div>

    <h6>Headquarters</h6>

    <div class="form-group row">
        <%= f.label "City:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.text_field :city, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label "State:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.text_field :state, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label "Website:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.text_field :website, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label "Email:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.email_field :email, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label "Password:", class: "col-sm-1 col-form-label" %>
        <div class="col-sm-3">
            <%= f.password_field :password, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            <%= f.submit class: "btn btn-secondary my-2" %>
        </div>
    </div>
    
<% end %> 
